<h1>Sign Up</h1>

<%= form_for	@user do |f| %>
	<%= f.label :name %>
	<%= f.text_field :name, required: true %>

	<%= f.label :email %>
	<%= f.email_field :email, required: true %>

	<%= f.label :password %>
	<%= f.password_field :password, required: true %>

	<%= f.label :password_confirmation, required: true %>
	<%= f.password_field :password_confirmation %>

	<%= f.submit "Sign Up" %>
<% end %>